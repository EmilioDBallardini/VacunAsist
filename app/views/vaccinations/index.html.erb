<div class="container">
    <h3>Listado de Vacunatorios de la ciudad de Las Breñas</h3>
    <table class="table table-hover">
        <tr>
            <thead>
                <th>Vacunatorio: </th>
                <th>Direccion: </th>
                <th>Contacto: </th>
            </thead>
        </tr>
        <tbody>
            <% @vaccinations.each do |v| %>
            <tr>
                <td><%= v.nombre %></td>
                <td><%= v.direccion %></td>
                <td><%= v.contacto %></td>
                <td>
                    <%= link_to "Editar", editvaccination_path(v), class:"btn btn-link"%>
                    <%= link_to "Eliminar", v, method: :delete, data: { confirm: "¿Deseas eliminar el registro de este vacunatorio?"},class:"btn btn-link"%>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <%= link_to "Ingresar vacunatorio", vaccinations_new_path, class: 'btn btn-info btn-m'%>
</div>