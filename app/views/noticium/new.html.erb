  <div class="row">

    <div class="col">
      <h2>Nueva noticia</h2>

      <%= form_for(Noticium, as: @noticium, url: new_noticium_path(@noticium))  do |f| %>

      <div class="field">
        <h5>
          <%= f.label :titulo %><br />
        </h5>

        <%= f.text_field :titulo, autofocus: true, autocomplete: "titulo" %>

      </div>

      <div class="field">
        <%= f.label :subtitulo %><br />
        <%= f.text_field :subtitulo, autofocus: true, autocomplete: "subtitulo" %>

      </div>

      <div class="field">
        <%= f.label :epigrafe %><br />
        <%= f.text_field  :epigrafe, autofocus: true, autocomplete: "epigrafe" %>

      </div>

      <div class="field">
        <%= f.label :cuerpo %><br />
        <%= f.text_field :cuerpo, autofocus: true, autocomplete: "cuerpo" %>
      </div>

      <div class="field">
        <%= f.label :img_url %><br />
        <%= f.text_field :img_url, autofocus: true, autocomplete: "img_url" %>
      </div>

      <div class="field">
        <%= f.label :pie_de_pagina %><br />
        <%= f.text_field :pie_de_pagina, autofocus: true, autocomplete: "pie_de_pagina" %>
      </div>

      <%= f.submit %>

      <% end %>
    </div>

  </div>
