<h1>Listado de Camapañas registradas</h1>
<table>
    <tr>
        <thead>
            <th>Campaña: </th>
            <th>Vacuna: </th>
        </thead>
    </tr>
    <% @campaingfor_users.where(user_id:current_user.id).each do |c| %>
        <tr>
            <td><%= c.campaingvaccine.name %></td>
            <td><%= c.campaingvaccine.vacuna.nombre %></td>
            <td>
                <%= link_to "Editar", editcampaingfor_users_path(c)%>
                <%= link_to "Eliminar", c, method: :delete, data: { confirm: "¿Desea eliminar el registro a esta campaña?"} %>
            </td>
        </tr>
    <% end %>
</table>
<%= link_to "Registrarse a campaña", campaingfor_users_new_path%>
